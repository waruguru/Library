<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Gray"
    tools:context=".ui.home.scan.ScanLaptopFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="60dp">

        <ImageView
            android:id="@+id/Ivback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_left_arrow"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvScanID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_laptop_serial_number"
            android:textColor="@color/white"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="50dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/ivFlash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="330dp"

            android:src="@drawable/ic_flash"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_marginBottom="@dimen/_80dp"
        android:layout_below="@id/relativeLayout2" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="330dp"
        android:layout_height="42dp"
        android:id="@+id/btnProceed2"
        android:layout_marginTop="670dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:backgroundTint="@null"
        android:gravity="center"
        android:background="@drawable/button2_bg"
        android:text="@string/proceed_without_laptop"
        android:textAllCaps="true"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="normal"/>



</RelativeLayout>

</androidx.core.widget.NestedScrollView>