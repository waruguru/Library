<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Gray"
    tools:context=".ui.home.visitor.VisitorDetailsQRCodeScanFragment">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_white_left_arrow"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_expenses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:minHeight="32dp"
            android:layout_marginStart="@dimen/_100dp"
            android:padding="8dp"
            android:text="Scan Id"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="14sp"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/tvScanID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/scan_qr_code_to_get_the_details_of_the_visitor"
            android:textColor="@color/white"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="50dp"
            android:layout_marginTop="@dimen/_70dp"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/ivFlash"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="330dp"
            android:src="@drawable/ic_flash"/>


    </RelativeLayout>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_below="@id/relativeLayout2" />
</RelativeLayout>


</androidx.core.widget.NestedScrollView>