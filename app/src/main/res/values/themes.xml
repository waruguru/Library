<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.G4SAccessCSystem" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:autofilledHighlight" tools:ignore="NewApi">@android:color/transparent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppCompat." parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorOnPrimary">@color/Red</item>
        <item name="colorAccent">@color/Red</item>
        <item name="colorPrimaryVariant">@color/Red</item>

    </style>

    <style name="inputLayoutOutlinedBoxCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/Gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
    </style>

    <style name="TextInputLayoutCustom" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="colorControlNormal">@color/colorWhite</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="colorControlHighlight">@color/colorWhite</item>
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">none</item>
    </style>

    <style name="BottomSheetItem">
        <item name="android:textSize">20sp</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="onDescTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/onboarding_desc_color</item>
    </style>

    <style name="ButtonFont" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="verificationTv" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textColor">@color/dark_black</item>
    </style>

    <style name="pinTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="numberStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_light</item>
        <item name="android:textSize">@dimen/_32sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="name" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="Eclectics" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="IDTextview" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">@font/helvetica_regular</item>
        <item name="android:textSize">@dimen/_10sp</item>
        <item name="android:textColor">@color/Gray</item>
    </style>

    <style name="TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/colorWhite</item>
        <item name="tabSelectedTextColor">@color/Red</item>
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>


    <dimen name="_12sp">12sp</dimen>
    <dimen name="_32sp">32sp</dimen>
    <dimen name="_14sp">14sp</dimen>
</resources>